{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true
  },
  "include": ["env.d.ts", "src/**/*.vue", "src/**/*.json", "src/assets/**/*"],
  "exclude": ["src/**/__tests__/*", "node_modules"]
}
